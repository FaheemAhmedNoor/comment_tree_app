<div class="modal-dialog modal-lg">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="replyModalLabel">Add Reply</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="reply-modal-errors"></div>
      <%= form_for @response, html: { id: 'replyModalForm' } do |f| %>
        <%= f.hidden_field :parent_id, value: @parent_comment.id %>
        <%= f.text_area :text, rows: '3', class: "form-control", placeholder: "Enter comment..." %>
        <%= f.submit class: "btn btn-primary btn-sm mt-4", id: 'replyModalSubmitBtn' %>
      <% end %>
    </div>
  </div>
</div>

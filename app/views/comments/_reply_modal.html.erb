<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="replyModalLabel">Add Reply</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_for @response, url: reply_comments_path do |f| %>
        <%= f.hidden_field :parent_id, value: @parent_comment.id %>
        <%= f.text_field :text, class: "form-control", placeholder: "Enter comment..." %>
        <%= f.submit class: "btn btn-primary btn-sm mt-4" %>
      <% end %>
    </div>
  </div>
</div>
